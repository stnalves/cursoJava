package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Person;

public class ProgramAlturas {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("How many people will be? ");
		int n = sc.nextInt();
		sc.nextLine();
		
		Person[] people = new Person[n];
		
		for (int i = 0; i < people.length; i++) {
			System.out.printf("Dados da %da pessoa:\n", i+1);
			System.out.print("Name: ");
			String name = sc.nextLine();
			System.out.print("Age: ");
			int age = sc.nextInt();
			sc.nextLine();
			System.out.print("Height: ");
			double height = sc.nextDouble();
			sc.nextLine();
			
			people[i] = new Person(name, age, height);
		}
		
		double sumHeight = 0;
		int bellowAge = 0;
		for (Person p: people) {
			sumHeight += p.getHeight();
			
			if (p.getAge() < 16) {
				bellowAge++;
			}
		}
		
		double avgHeight = sumHeight / people.length;
		double percent = bellowAge / people.length * 100;
		
		System.out.println();
		System.out.printf("Average height: %.2f\n", avgHeight);
		System.out.printf("People under 16 years old: %.1f%\n", percent);
		for (Person p: people) {
			if (p.getAge() < 16) {
				System.out.println(p.getName());
			}
		}
		
		sc.close();
	}
}
