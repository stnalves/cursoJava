package Triangulo;

public class Triangulo {
	double a;
	double b;
	double c;
	
	public Triangulo(double a, double b, double c) {
		this.a = a;
		this.b = b;
		this.b = b;
	}
	
	public double getA() {
		return a;
	}

	public void setA(double a) {
		this.a = a;
	}

	public double getB() {
		return b;
	}

	public void setB(double b) {
		this.b = b;
	}

	public double getC() {
		return c;
	}

	public void setC(double c) {
		this.c = c;
	}

	private double perimetro() {
		double p = (a + b + c) / 2;
		return p;
	}
	
	public double area() {
		double p = perimetro();
		double area = Math.sqrt(p * (p - a) * (p - b) * (p - c));
		return area;
	}
}
