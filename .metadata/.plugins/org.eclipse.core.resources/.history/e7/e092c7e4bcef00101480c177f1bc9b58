package exercicios;

import java.util.Locale;
import java.util.Scanner;

public class CurrencyConverter {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("What is the dollar price? ");
		double dollar = sc.nextDouble();
		
		System.out.print("How many dollars will be bought? ");
		double dollarsBought = sc.nextDouble();
		
		System.out.printf("Amount to be paid in reais = %.2f%n", converter(dollar, dollarsBought));
		
		sc.close();
	}
	
	public static double converter(double dollar, double dollarsBought) {
		return dollarsBought / dollar / 0.06;
	}
}
