package estoque;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Insira os dados do produto:");
		System.out.print("Nome: ");
		String nome = sc.nextLine();
		System.out.print("Preço: ");
		double preco = sc.nextDouble();
		System.out.print("Quantidade em estoque: ");
		int qnt = sc.nextInt();
		
		Product product = new Product(nome, preco, qnt);
		
		System.out.println();
		System.out.println(product);
		
		System.out.println();
		System.out.print("Insira o número de produtos para adicionar em estoque: ");
		qnt= sc.nextInt();
		product.addProducts(qnt);
		System.out.println("Dados atualizados: " + product);
		
		System.out.println();
		System.out.print("Insira o número de produtos para remover em estoque: ");
		qnt= sc.nextInt();
		product.removeProducts(qnt);
		System.out.println("Dados atualizados: " + product);
		
		sc.close();
	}
}
