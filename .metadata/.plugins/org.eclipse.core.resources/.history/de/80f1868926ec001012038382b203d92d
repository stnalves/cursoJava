package exercicios;

import java.util.Scanner;

public class ValorPagar {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int codigo1, codigo2, numPecas1, numPecas2;
		double valorUnit1, valorUnit2, valorPagar;
		
		codigo1 = sc.nextInt();
		numPecas1 = sc.nextInt();
		valorUnit1 = sc.nextDouble();
		
		codigo2 = sc.nextInt();
		numPecas2 = sc.nextInt();
		valorUnit2 = sc.nextDouble();
		
		valorPagar = numPecas1 * valorUnit1 + numPecas2 * valorUnit2;
		
		System.out.printf("VALOR A PAGAR: R$ %.2f%n", valorPagar);
		
		sc.close();
	}
}
