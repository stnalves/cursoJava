package mercado;

public class Produto {
	String nome;
	double preco;
	double qnt;
	double valorTotal;
	
	public Produto(String nome, double preco, int qnt) {
		this.nome = nome;
		this.preco = preco;
		this.qnt = qnt;
		this.valorTotal = calculaValorTotal();
	}
	
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public double getPreco() {
		return preco;
	}
	public void setPreco(double preco) {
		this.preco = preco;
	}
	public double getQnt() {
		return qnt;
	}
	public void setQnt(double qnt) {
		this.qnt = qnt;
	}
	
	public double totalNoEstoque() {
		return this.qnt;
	}
	
	public void adicionarProdutos(int qnt) {
		this.qnt += qnt;
	}
	
	public void removerProdutos(int qnt) {
		this.qnt -= qnt;
	}
	
	public double calculaValorTotal() {
		return this.preco * this.qnt;
	}
	
	@Override
	public String toString() {
		return "Produto: " + nome + "; Pre√ßo: R$ " + String.format("%.2f", preco) + "; Quantidade: " + qnt + ", Valor total: R$ " + String.format("%.2f" , valorTotal);
	}
	
}
