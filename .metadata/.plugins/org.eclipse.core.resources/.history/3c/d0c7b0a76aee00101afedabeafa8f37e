package Triangulo;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite as medidas do Triangulo X:");
		double a1 = sc.nextDouble();
		double b1 = sc.nextDouble();
		double c1 = sc.nextDouble();

		System.out.println("Digite as medidas do Triangulo Y:");
		double a2 = sc.nextDouble();
		double b2 = sc.nextDouble();
		double c2 = sc.nextDouble();
		
		Triangulo t1 = new Triangulo(a1, b1, c1);
		Triangulo t2 = new Triangulo(a2, b2, c2);
		
		double area1 = t1.area();
		double area2 = t2.area();
		
		System.out.println("Area do triangulo X: " + area1);
		System.out.println("Area do triangulo Y: " + area2);
		
		System.out.println("Maior area: " + maiorArea(area1, area2));
		
		sc.close();
	}
	
	private static String maiorArea(double area1, double area2) {
		if (area1 > area2) {
			return "X";
		} return "Y";
	}
}
